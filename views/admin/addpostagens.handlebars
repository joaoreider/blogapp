<form method="POST" action="/admin/postagens/nova">
  <fieldset>
    <legend>Adicionar Postagem</legend>

    <div class="mb-3">
      <label for="titulo" class="form-label">Titulo: </label>
      <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Título">
    </div>

    <div class="mb-3">
      <label for="slug" class="form-label">Slug: </label>
      <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da postagem">
    </div>

    <div class="mb-3">
      <label for="descricao" class="form-label">Descrição: </label>
      <input type="text" name="descricao" id="descricao" class="form-control" placeholder="Descrição da postagem">
    </div>

    <div class="mb-3">
      <textarea name="conteudo" id="descricao"> </textarea>
    </div>

    <div class="mb-3">
      <label for="categoria" class="mt-2">Categoria: </label>
      <select name="categoria" class="form-select mt-2">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categria registrada</option>
            {{/each}}
            
      </select>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Criar postagem</button>
  </fieldset>
</form>