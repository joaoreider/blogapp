<form method="POST" action="/admin/categorias/edit">

  <input type="hidden" name="id" value="{{categoria._id}}">
  <fieldset>
    <legend>Editar categoria</legend>
    <div class="mb-3">
      <label for="nome" class="form-label">Nome: </label>
      <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome da categoria" value="{{categoria.nome}}">
    </div>
    <div class="mb-3">
      <label for="slug" class="form-label">Slug: </label>
      <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da categoria" value="{{categoria.slug}}">
    </div>

    <button type="submit" class="btn btn-primary">Editar categoria</button>
  </fieldset>
</form>