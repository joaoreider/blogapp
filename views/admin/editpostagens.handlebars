<form method="POST" action="/admin/postagens/edit">

<input type="hidden" name="id" value="{{postagem._id}}">
  <fieldset>
    <legend>Adicionar Postagem</legend>

    <div class="mb-3">
      <label for="titulo" class="form-label">Titulo: </label>
      <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Título" value="{{postagem.titulo}}">
    </div>

    <div class="mb-3">
      <label for="slug" class="form-label">Slug: </label>
      <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da postagem"value="{{postagem.slug}}">
    </div>

    <div class="mb-3">
      <label for="descricao" class="form-label">Descrição: </label>
      <input type="text" name="descricao" id="descricao" class="form-control" placeholder="Descrição da postagem" value="{{postagem.descricao}}">
    </div>

    <div class="mb-3">
      <textarea name="conteudo" id="descricao"> {{postagem.conteudo}} </textarea>
    </div>

    <div class="mb-3">
      <label for="categoria" class="mt-2">Categoria: </label>
      <select name="categoria" class="form-select mt-2">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categria registrada</option>
            {{/each}}
            
      </select>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Editar postagem</button>
  </fieldset>
</form>