
<h2>Lista de categorias: </h2>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

<br>
<br>

{{#each categorias}}

    <div class="card">
        
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small> <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-info mt-4 btn-sm">Editar Categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger btn-sm mt-2">Deletar</button>
            </form>
        </div>
    </div>
    <br>
{{else}}

    <h4 class="mt-3"> Nenhuma categoria cadastrada</h4>

{{/each}}